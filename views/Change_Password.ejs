    	<% include menu_sidebar.ejs %>
        <div class="row row-centered">
            <form id="frmlogin" method="post" action="/login">
            <div class="col-md-4 col-centered">
                <h1 style='padding-bottom: 15px; margin-left:70px'>Change Password</h1>

