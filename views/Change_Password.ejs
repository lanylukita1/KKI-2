    <script type="text/javascript">
    function check_data(){
        $('#lbAlert').html(""); 
        if (($('#txtPWDO').val() == "") || ($('#txtPWD').val() == "") || ($('#txtPWDR').val() == "")){
                $('#lbAlert').html("กรุณาใส่ข้อมูล Password"); 
                return false;
        }
        if ($('#txtPWD').val() !== $('#txtPWDR').val()){
        	$('#lbAlert').html('ข้อมูล Password ไม่ตรงกัน');
        	return false;
        }
        
		if ($.trim($('#txtPWD').val()).length < 8){
			$('#lbAlert').html('Password ต้องมีจำนวนอักษรมากกว่าหรือเท่ากับ 8 ตัว');
			return false;
		}
		if ($.trim($('#txtPWD').val()).length > 30){
			$('#lbAlert').html('จำนวนตัวอักขระของ Password มากกว่าที่กำหนดไว้ต้องมีน้อยกว่า 30');
			return false;
		}
	
		//////////ตัวแรกเป็นภาษาอังกฤษ/////////////////
		var fstChr = $.trim($('#txtPWD').val().toUpperCase());						
	    if (fstChr[0] < 'A' || fstChr[0] > 'Z') {
	    	$('#lbAlert').html('Password ตัตวแรกต้องเป็นตัวอักษรเท่านั้น...');
	    	return false;
	    }
	    ///////////รหัสต้องมีเลข////////////////
	    var num = 0;
	    var pwd = $.trim($('#txtPWD').val());
	    //var pwdlength = $.trim($('#central-user-password').val();
	    for (var i = 0; i < pwd.length; i++){
	    	if (pwd[i] >= '0' && pwd[i] <= '9' ) num++;
//	    	console.log('pwd=',pwd[i]);
	    	}
	    if (num < 1) {$('#lbAlert').html('Password ต้องมีจำนวนตัวเลขมากกว่าหรือเท่ากับ 1 ตัว');
	    	return false;
	    }
	    
        $.post( "/changepwd", { username: $('#txtUser').val(),
        					userid: $('#txtID').val(),
        					oldpassword: $('#txtPWDO').val(),
        					password: $('#txtPWD').val()})
        .done(function( data ) {
        	console.log(data);
          	if(data){
          		if (data !== 'Change Password Complate.'){
              		$('#lbAlert').html(data);
          		}else{
          			alert(data);
          			window.location.assign('/logout');
          		}
          	}
        });
        return true;
}
    </script> 
