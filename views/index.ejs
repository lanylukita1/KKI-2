  <body>
          <button onclick="loadDemo('en')">Greeting in English</button> 
          <button onclick="loadDemo('fr')">Greeting in France</button> 
          <div id="langResult"></div>

          <div class="container" >
          <!-- / END MULTIPLE LANGUAGE -->

          <div class="switcher" style="left:150px;">
                <ul class="colors-list nav-text">
                    <li><a title="Pink" id="pink" class="pink" ></a></li>
                    <li><a title="Cyan" id="cyan" class="cyan" ></a></li>
                    <li><a title="White" id="white" class="white" ></a></li>
                    <li><a title="Brown" id="brown" class="brown" ></a></li>
                </ul>
            </div>  
